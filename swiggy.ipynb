# Swiggy Data Analysis using Python

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# Load dataset
df = pd.read_csv("data/swiggy.csv")

print("Dataset Loaded Successfully")
print(df.head())

# Dataset info
print("\nDataset Shape:", df.shape)
print("\nDataset Info:")
print(df.info())

# Check missing values
print("\nMissing Values:")
print(df.isnull().sum())

# Data Cleaning
df.drop_duplicates(inplace=True)
df = df.dropna(subset=['rating'])
df['rating'] = pd.to_numeric(df['rating'], errors='coerce')

# Top Rated Restaurants
top_restaurants = df.sort_values(by='rating', ascending=False).head(10)
print("\nTop Rated Restaurants:")
print(top_restaurants[['restaurant_name', 'rating']])

# Average Rating by City
city_rating = df.groupby('city')['rating'].mean().sort_values(ascending=False)
print("\nAverage Rating by City:")
print(city_rating.head(10))

# Most Popular Cuisines
print("\nTop 10 Cuisines:")
print(df['cuisine'].value_counts().head(10))

# Price Distribution
plt.hist(df['price'], bins=20)
plt.xlabel("Price")
plt.ylabel("Number of Restaurants")
plt.title("Price Distribution on Swiggy")
plt.show()

# Price vs Rating
plt.scatter(df['price'], df['rating'])
plt.xlabel("Price")
plt.ylabel("Rating")
plt.title("Price vs Rating")
plt.show()

# Fastest Delivery
fast_delivery = df.sort_values(by='delivery_time').head(10)
print("\nFastest Delivery Restaurants:")
print(fast_delivery[['restaurant_name', 'delivery_time']])

print("\nAnalysis Completed Successfully")
